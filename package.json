{
  "name": "latte-lang",
  "publisher": "smuuf",
  "displayName": "Nette Latte templates",
  "repository": {
    "type": "git",
    "url": "https://github.com/smuuf/vscode-latte-lang"
  },
  "description": "Support for Nette Latte template files.",
  "version": "0.0.9",
  "scripts": {
    "test": "bun test",
    "clear-build": "rm -rf ./out/*",
    "vscode:prepublish": "npm run clear-build && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "./resources/logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "latte",
        "aliases": [
          "Latte",
          "latte"
        ],
        "extensions": [
          ".latte"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "latte",
        "scopeName": "source.latte",
        "path": "./syntaxes/latte.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "latte-lsp.trace.server": {
          "scope": "window",
          "type": "object",
          "description": "Traces the communication between VS Code and the language server.",
          "properties": {
            "verbosity": {
              "type": "string",
              "description": "Controls the verbosity of the trace.",
              "enum": [
                "off",
                "message",
                "verbose"
              ],
              "default": "verbose"
            },
            "format": {
              "type": "string",
              "description": "Controls the output format of the trace.",
              "enum": [
                "text",
                "json"
              ],
              "default": "text"
            }
          }
        }
      }
    }
  },
  "capabilities": {
    "hoverProvider": true,
    "definitionProvider": true,
    "completionProvider": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.84.1",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@flatten-js/interval-tree": "^1.1.1",
    "php-parser": "^3.1.5"
  }
}
